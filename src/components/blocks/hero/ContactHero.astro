---
// Contact Hero Section
// ------------
// Description: A hero section with a contact form

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import Form from '../contact/BasicForm.astro'

// Props
type Props = {
	id?: string
	title?: string
	text?: string
	classes?: string
}
const { id, title, text, classes } = Astro.props
---

<Section id={id} classes={classes}>
	<Row>
		<Col span="6" classes={`self-center`}>
			<header class="max-w-xl">
				<h1 set:html={title} />
				<p class="text-lg leading-relaxed">{text}</p>
			</header>
		</Col>
		<Col span="6" classes="relative">
			<Form classes="max-w-xl" />
		</Col>
	</Row>
	<Row>
		<Col span="12" classes="text-center mt-8">
		<p class="text-sm text-neutral-500 dark:text-neutral-400">
			Nous sommes là pour vous aider. N'hésitez pas à nous contacter pour toute question ou assistance.
		</p>
		<br />
		<p class="text-sm text-neutral-500 dark:text-neutral-400">
		📞 Tél : 07 45 02 35 79<br />
		📧 Mail : contact@andy-co.com<br />
		📍 Adresse : 66 Avenue des Champs Élysées<br />
		🕘 Horaires : dimanche – Vendredi : 9h – 18h
		</p>
		</Col>
	</Row>	
</Section>
